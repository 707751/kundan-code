pipeline {
    agent any

    stages {
        stage('Fetch Jenkinsfile') {
            steps {
                git branch: 'main', url: 'https://github.com/707751/kundan-code.git'
            }
        }

        stage('Fetch Code') {
            steps {
                git branch: 'main', url: 'https://github.com/707751/test-git.git'
            }
        }

        stage('Install Apache') {
            steps {
                script {
                    sh 'sudo apt install apache2 -y'
                    sh 'sudo systemctl restart apache2'
                }
            }
        }

        stage('Deploy Application') {
            steps {
                script {
                    sh 'sudo cp -R * /var/www/html'
                }
            }
        }
    }
}
